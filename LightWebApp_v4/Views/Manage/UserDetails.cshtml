@model LightWebApp_v4.Models.IndexViewModel
@{
    ViewBag.Title = "UserDetails";
}

<h2>Информация</h2>

<div>
    <h4>Заказчик</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Компания")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>

        <dt>
            @Html.DisplayName("Контактное лицо")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactPerson)
        </dd>

        <dt>
            @Html.DisplayName("Телефон")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayName("Дополнительно")
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.Info, 5, 10, htmlAttributes: new { @readonly = "readonly", @class = "form-control" })
        </dd>

        <dt>
            @Html.DisplayName("Проекты")
        </dt>

        @foreach (var item in ViewBag.Lights)
        {
            <dd>
                @item.Name
            </dd>

        }


    </dl>
</div>
<p>
    @Html.ActionLink("К списку компаний", "UsersIndex")
</p>