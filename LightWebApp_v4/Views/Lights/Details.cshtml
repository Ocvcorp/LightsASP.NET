@model LightWebApp_v4.Models.Light

@{
    ViewBag.Title = "Details";
}

<h2>Информация о проекте</h2>

<div>
    <h4>Осветительная установка</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Наименование")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Адрес")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adress)
        </dd>

        <dt>
            @Html.DisplayName("Заказчик")
        </dt>

        <dd>
            @ViewBag.Company
        </dd>

        <dt>
            @Html.DisplayName("Состав")
        </dt>

        <dd>
            @ViewBag.ProjectSet
        </dd>

        <dt>
            @Html.DisplayName("Состояние")
        </dt>

        <dd>
            @ViewBag.Stage
        </dd>

        <dt>
            @Html.DisplayName("Описание")
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.Description, 5, 10, htmlAttributes: new { @readonly = "readonly", @class = "form-control" })
        </dd>

        <dt>
            @Html.DisplayName("Тип установки")
        </dt>

        <dd>
            @ViewBag.LightType
        </dd>

        <dt>
            @Html.DisplayName("Область применения")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UseField)
        </dd>

        <dt>
            @Html.DisplayName("Отрасль")
        </dt>

        <dd>
            @ViewBag.Business
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.LightId }) |
    @Html.ActionLink("К списку проектов", "Index")
</p>
